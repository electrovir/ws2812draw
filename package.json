{
    "name": "ws2812draw",
    "version": "2.2.1",
    "description": "Drawing to a ws2812 LED matrix",
    "repository": {
        "type": "git",
        "url": "https://github.com/electrovir/ws2812draw"
    },
    "license": "MIT",
    "author": "electrovir",
    "main": "dist/ts/index.js",
    "typings": "dist/ts/index.d.ts",
    "bin": {
        "ws2812draw-test": "dist/ts/test.js"
    },
    "scripts": {
        "build": "rm -rf build && node-gyp configure && node-gyp build",
        "compile": "node-gyp build && npm run tsc",
        "dev-test": "func() { npm run tsc && node dist/ts/test.js \"$@\"; }; func",
        "example": "func() { node dist/ts/example.js \"$@\"; }; func",
        "format": "prettier --write **/*.ts **/*.json",
        "prepublishOnly": "npm run tsc",
        "test": "sudo -E env \"PATH=$PATH\" ts-node src/ts/test.ts",
        "test-letters": "func() { npm run tsc && node dist/ts/test-text.js \"$@\"; }; func",
        "test:color": "ts-node src/ts/test-color.ts",
        "tsc": "rm -rf dist && tsc"
    },
    "dependencies": {
        "bindings": "^1.5.0",
        "node-addon-api": "^2.0.0",
        "node-gyp": "^6.0.1",
        "typescript": "^3.7.3"
    },
    "devDependencies": {
        "@types/bindings": "^1.3.0",
        "@types/node": "^12.12.17",
        "prettier": "2.0.5",
        "ts-node": "8.9.0"
    }
}
