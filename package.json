{
    "name": "ws2812draw",
    "version": "2.4.0",
    "description": "Draw to a ws2812 LED matrix with a Raspberry Pi",
    "keywords": [
        "ws2812",
        "ws2812b",
        "ws281x",
        "led",
        "matrix",
        "draw",
        "text",
        "scroll",
        "image",
        "raspberry",
        "pi",
        "raspberry-pi"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/electrovir/ws2812draw"
    },
    "license": "MIT",
    "author": "electrovir",
    "main": "dist/ts/index.js",
    "typings": "dist/ts/index.d.ts",
    "bin": {
        "ws2812draw-test": "dist/ts/test.js"
    },
    "scripts": {
        "build": "node-gyp configure && node-gyp build",
        "compile": "rm -rf dist && npm run tsc",
        "example": "sudo -E env \"PATH=$PATH\" node dist/tests/example.js",
        "example:full:simple": "npm run build && npm run compile && npm run example:simple",
        "example:simple": "sudo -E env \"PATH=$PATH\" node dist/tests/simple-example.js",
        "prepare": "npm run compile",
        "test": "sudo -E env \"PATH=$PATH\" ts-node --transpile-only src/ts/test.ts",
        "test:color": "ts-node --transpile-only src/ts/test-color.ts",
        "test:letters": "func() { npm run tsc && node dist/ts/test-text.js \"$@\"; }; func",
        "tsc": "rm -rf dist && tsc"
    },
    "dependencies": {
        "bindings": "^1.5.0",
        "node-addon-api": "^4.3.0",
        "node-gyp": "^9.0.0",
        "typescript": "^4.6.3"
    },
    "devDependencies": {
        "@types/bindings": "^1.5.1",
        "@types/node": "^17.0.23",
        "prettier": "2.6.1",
        "ts-node": "10.7.0",
        "virmator": "^2.0.3"
    }
}
